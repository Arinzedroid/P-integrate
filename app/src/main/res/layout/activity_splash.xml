<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/wasilah"
        android:layout_marginBottom="70dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:id="@+id/emailLayout">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/email"/>

                <EditText
                    android:id="@+id/user_email_address"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:hint="Preferred email"
                    android:paddingStart="10dp"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/emailLayout"
                android:layout_marginTop="7dp"
                android:id="@+id/cardNumberLayout">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/card"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:paddingStart="10dp"
                    android:id="@+id/user_card_number"
                    android:hint="Card Number"/>

            </LinearLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardNumberLayout"
                android:layout_marginTop="10dp"
                android:id="@+id/datecvvLayout">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Expiry"
                        android:id="@+id/expiryText"
                        android:textColor="#000000"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"/>


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/expiryText">

                        <EditText
                            android:id="@+id/user_expiry_month"
                            android:layout_width="70dp"
                            android:layout_height="50dp"
                            android:hint="MM"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:maxEms="4"
                            android:gravity="center"
                            android:maxLength="2"
                            android:maxLines="1"
                            android:padding="8dp" />

                        <EditText
                            android:id="@+id/user_expiry_year"
                            android:layout_width="70dp"
                            android:layout_height="50dp"
                            android:layout_toEndOf="@id/user_expiry_month"
                            android:hint="YY"
                            android:imeOptions="actionNext"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxEms="4"
                            android:maxLength="2"
                            android:maxLines="1"
                            android:padding="8dp" />
                    </RelativeLayout>

                </RelativeLayout>




                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:id="@+id/cvvText"
                        android:text="CVV"/>

                    <EditText
                        android:id="@+id/user_cvv"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:imeOptions="actionDone"
                        android:hint="CVV"
                        android:layout_below="@+id/cvvText"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="3"
                        android:maxLines="1"
                        android:padding="8dp" />

                </RelativeLayout>



            </RelativeLayout>




            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Pay"
                android:textAllCaps="true"
                android:backgroundTint="@android:color/holo_red_dark"
                android:textColor="#ffffff"
                android:id="@+id/pay_button"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/datecvvLayout"/>


            </RelativeLayout>

    </ScrollView>

</RelativeLayout>